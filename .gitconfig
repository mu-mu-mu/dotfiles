[alias]
	st = status
	cm = commit
	br = branch
	co = checkout
	cmam = commit -a -m
	camd = commit --amend -a
	rh = reset --hard
	latexdiff = difftool -t latexdiff

[user]
	email = keisuke.nishimura@inria.fr
	name = Keisuke Nishimura

[core]
	editor = vim

[pull]
	ff = only

[include]
	path = .gitconfig.local
[credential]
	helper = store --file ~/.git-credentials
[difftool "latexdiff"]
	cmd = git-latexdiff-helper \"$LOCAL\" \"$REMOTE\"
